    <form action="/admin/revsearch" method="post">
      <section class="portfolio bg-third ">
        <div class="container">
        </div>
        <div class="container">
          <img class="img-fluid mb-5 d-block mx-auto" src="/public/bootstrap/img/profile.png" alt="">
          <div class="row">

            <div class="col-md-12 mb-5 mb-lg-0">
              <h2 class="text-uppercase mb-0 text-center">예약 현황 조회</h1>
                <hr>

                <div class="row">
                  <div class="col-md-7 mb-4 mb-lg-0">
                  </div>
                  <div class="col-md-2 mb-4 mb-lg-0">
                    <select class="selectpicker form-control" name = "selcon">
                      <option>예약자 이름</option>
                      <option>시설 이름</option>
                      <!-- <option>시설 주소</option>
                      <option>수용 인원</option> -->
                    </select>
                  </div>
                  <div class="col-md-3m  mb-lg-0">
                    <input type="text" class="form-control" placeholder="Search" name = "inputcon">

                  </div>
                  <div class="col-md-1m  mb-lg-0">
                    <button type="submit" class="btn btn-secondary btn-block" >Submit</button>
                  </div>
                </div>

                <div class="container">
                  <div class="row">
                    <p></p>
                    <p> </p>

                    <div class="col-md-12 col-md-offset-1">

                      <div class="panel panel-default panel-table">

                        <div class="panel-body">
                          <table class="table table-striped table-bordered table-list">
                            <thead>
                              <tr>
                                <!-- <th><em class="fa fa-cog"></em></th> -->
                                <th>예약자명</th>
                                <th>시설이름</th>
                                <th class="hidden-xs">수용인원</th>
                                <th>운영시간</th>
                              </tr>
                            </thead>
                            <%  var noStart = (pageCount - page) * perPage;

                            for (var i = 0; i < posts.length; i++) {
                              var curUsername = posts[i]._doc.username;
                              var curFacilityname = posts[i]._doc.facilityname;
                              var curPeople = posts[i]._doc.people;
                              var curEndTime = posts[i]._doc.endtime;
                              var curStartTime = posts[i]._doc.starttime;

                            	console.log("하이"+ posts.length);
                              %>



                              <tr>
                                <td><%=curUsername%></td>
                                <td><a href="/admin/revlist/<%=posts[i]._id %>"><%=curFacilityname %></a></td>
                                <td><a href="/admin/revlist/<%=posts[i]._id %>"><%=curPeople %></a></td>
                                <td><a href="/admin/revlist/<%=posts[i]._id %>"><%=curStartTime %> 부터 <%=curEndTime %></a></td>
                              </tr>
                              <% } %>
                            </table>
                          </div>

                          <br>



                          <center>

                            <div class="tiny ui basic buttons" style="margin:0 auto;">
                              <%
                              if (page > 0) {
                                %>
                                <div class="ui icon button" onclick="listpost(0, <%=perPage %>)">
                                  <i class="backward icon"></i>
                                </div>
                                <div class="ui icon button" onclick="listpost(<%=(page-1) %>, <%=perPage %>)">
                                  <i class="left chevron icon"></i>
                                </div>
                                <%
                              } else {
                                %>
                                <div class="ui disabled icon button">
                                  <i class="backward icon"></i>
                                </div>
                                <div class="ui disabled icon button">
                                  <i class="left chevron icon"></i>
                                </div>
                                <%
                              }
                              %>
                              <%
                              var initial = Math.floor(page / 10) * 10;
                              console.log('initial : ' + initial);

                              var max = pageCount - initial;
                              if (max > 10) {
                                max = initial + 10;
                              } else {
                                max = initial + max;
                              }
                              console.log('max : ' + max);

                              for (var i = initial; i < max; i++) {
                                if (i != page) {
                                  %>
                                  <div class="ui button" onclick="listpost(<%=i %>, <%=perPage %>)">
                                    <%= i %>
                                  </div>
                                  <%
                                } else {
                                  %>
                                  <div class="ui active basic button">
                                    <%= i %>
                                  </div>
                                  <%
                                }
                              }
                              %>
                              <%
                              if ((page+1) < pageCount) {
                                %>
                                <div class="ui icon button" onclick="listpost(<%=(page+1) %>, <%=perPage %>)">
                                  <i class="right chevron icon"></i>
                                </div>
                                <div class="ui icon button" onclick="listpost(<%=(pageCount-1) %>, <%=perPage %>)">
                                  <i class="forward icon"></i>
                                </div>
                                <%
                              } else {
                                %>
                                <div class="ui disabled icon button">
                                  <i class="right chevron icon"></i>
                                </div>
                                <div class="ui disabled icon button">
                                  <i class="forward icon"></i>
                                </div>
                                <%
                              }
                              %>
                            </div>
                          </center>




                        </div>
                      </div></div>
                    </div>
                  </div>
                </div>
              </div>
