                        <input type="hidden" value="<%=user._id%>" name="id"/>
                        <input type="submit" class="btn btn-primary btn-block" value="회원수정"/>
                      </form>
                    </div>
                    <div class="col-md-6 mb-5 mb-lg-0" >
