                <% for(i=0; i<posts.length; i++) { %>
                <tr>
                  <th scope="row"><center><%=i+1%></center></th>
                  <td><a href="/user/revlist/<%=posts[i]._id %>"><center><%=posts[i]._doc.facilityname%></center></a></td>
                  <td><center><%=posts[i]._doc.username%></center></td>
                  <td><center><%=posts[i]._doc.date%></center></td>
