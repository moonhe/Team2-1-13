      <img class="img-fluid mb-5 d-block mx-auto" src="/public/bootstrap/img/prev_.png" alt="">
      <div class="row">

        <div class="col-md-3 mb-5 mb-lg-0">
        </div>

        <div class="col-md-6 mb-5 mb-lg-0">
          <h2 class="text-uppercase mb-0 text-center">회원 수정</h1>
            <hr>
            <!-- 인증 처리 후 메시지가 있으면 메시지 표시 -->


              <form action="/user/update" method="post" >
                  <input type="hidden" name="id" value="<%= user__id %>"/>
                <div class="form-group">
                  <h5 class="text-uppercase mb-0">이메일</h5>
                  <input type="text" class="form-control" name="email" value="<%=user_email%>">
                </div>
                <div class="form-group">
                  <h5 class="text-uppercase mb-0">비밀번호</h5>
                  <input type="password" class="form-control" name="password" placeholder="********" readonly>
                </div>
                <div class="form-group">
                  <h5 class="text-uppercase mb-0">이름</h5>
                  <input type="text" class="form-control" name="username" value="<%=user_name%>" readonly>
                </div>


                <div class="form-group">
                  <div class="row">
                    <div class="col-md-6">
                      <h5 class="text-uppercase mb-0">생년월일</h5>

                      <script>
                      $(function() {
                        $( "#datepicker" ).datepicker({
                          dateFormat : 'mm/dd/yy',
                          changeMonth : true,
                          changeYear : true,
                          yearRange: '-100y:c',
                          maxDate: '-1d'
                        });
                      });

                      </script>
                    </div>
                    <div class="col-md-6">
                      <h5 class="text-uppercase mb-0">성별</h5>
                    </div>
                  </div>

                  <div class ="row">
                    <div class="col-md-6">
                      <input type="text" id="datepicker" class="form-control" name = "birth" value="<%=user_birth%>" width="10">
                    </div>
                    <br>
                    <div class="col-md-6">
                      <select class="form-control" name = "gender" value="<%=user_gender%>" >
                        <option>남자</option>
                        <option>여자</option>
                      </select>
                    </div>
                  </div>
                </div>




                <div class="form-group">
                  <h5 class="text-uppercase mb-0">전화번호</h5>
                  <input type="text" class="form-control" name="phone" value="<%=user_phone%>">

                </div>

                <div class="form-group">
                  <h5 class="text-uppercase mb-0">주소</h5>
                  <div class="row">
                    <div class="col-lg-7 col-sm-2 mb-4">
                      <input type="text" name="postcode" class="form-control postcodify_postcode5" value="<%=user_postcode%>" />
                    </div>
                    <div class="col-lg-5 col-sm-3">
                      <button type="button" class ="btn btn-primary btn-block" name="postcode" id="postcodify_search_button">주소 검색</button><br />
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12 col-sm-8">
                      <input type="text" name="roadnameaddress" class="form-control postcodify_address" value="<%=user_roadnameaddress%>" /><br />
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-lg-12 col-sm-8">
                      <input type="text" name="address" class="form-control postcodify_details" value="<%=user_address%>"  /><br />
                    </div>
                  </div>
                </div>


                <center>
                  <input type="submit" class="btn btn-primary btn-block" value="수정 완료"/>
                </center>
                <hr>
              </form>

            </div>
          </div>
